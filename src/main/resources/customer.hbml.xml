<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.abcbank.counter.service.models.Customer" table="CUSTOMER">
        <operatorId name="customerId" type="int" column="CUSTOMER_ID">
            <generator class="native"/>
        </operatorId>
        <property name="name" column="NAME" type="java.lang.String"/>
        <property name="phNo" column="PHNO" type="java.lang.String"/>
        <one-to-one name="address" constrained="true" foreign-key="customerId"/>
    </class>
</hibernate-mapping>